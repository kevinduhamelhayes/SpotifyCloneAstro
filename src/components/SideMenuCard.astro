---
import type { Playlist } from "@/lib/data";
interface Props {
  playlist: Playlist;
}
const { playlist } = Astro.props
const{id, cover, title, artists, color} = playlist

const artistsString = artists.join(", ")
---
<a href={`/playlist/${id}`} class="playlist-item flex relative p-2 overflow-hidden items-center gap-4 rounded-md hover:bg-zinc-600">
<picture class="h-12 w-12 flex-none">
  <img src={cover} alt={`cover of ${title} by ${artistsString}`}
  class="object-cover w-full rounded-md">
</picture>
<div class=" flex flex-auto flex-col truncate">
  <h4 class="text-sm text-white">{title}</h4>
  <span class="text-xs text-gray-400">
    {artistsString}
  </span>

</div>
</a>